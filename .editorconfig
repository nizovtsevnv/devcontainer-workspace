# EditorConfig is awesome: https://EditorConfig.org

# Корневой конфиг для workspace
# Субмодули могут иметь собственные .editorconfig
root = true

# ===================================
# Общие настройки для всех файлов
# ===================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# ===================================
# Makefile (требует tabs!)
# ===================================
[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

# ===================================
# Documentation
# ===================================
[*.md]
indent_size = 2
trim_trailing_whitespace = false  # Markdown использует trailing spaces для line breaks
max_line_length = 120

[*.{txt,text}]
indent_size = 2

# ===================================
# Configuration Files
# ===================================
[*.{yml,yaml}]
indent_size = 2
max_line_length = 120

[*.{json,jsonc}]
indent_size = 2

[*.toml]
indent_size = 2

[*.ini]
indent_size = 2

# ===================================
# Shell Scripts
# ===================================
[*.sh]
indent_size = 2
end_of_line = lf

[*.bash]
indent_size = 2
end_of_line = lf

# ===================================
# Docker
# ===================================
[Dockerfile*]
indent_size = 2

[*.{dockerfile,containerfile}]
indent_size = 2

[docker-compose*.{yml,yaml}]
indent_size = 2

[.dockerignore]
indent_size = 2

# ===================================
# Git
# ===================================
[.gitignore]
indent_size = 2

[.gitattributes]
indent_size = 2

[.gitmodules]
indent_style = tab

# ===================================
# CI/CD
# ===================================
[.gitlab-ci.yml]
indent_size = 2

[.github/**/*.{yml,yaml}]
indent_size = 2

# ===================================
# Programming Languages
# (если будут скрипты на уровне workspace)
# ===================================

# Python
[*.py]
indent_size = 4
max_line_length = 88  # Black formatter default

# JavaScript/TypeScript
[*.{js,jsx,mjs,cjs}]
indent_size = 2
max_line_length = 100

[*.{ts,tsx,mts,cts}]
indent_size = 2
max_line_length = 100

# Go
[*.go]
indent_style = tab
indent_size = 4

# Rust
[*.rs]
indent_size = 4
max_line_length = 100

# C/C++
[*.{c,h,cpp,hpp,cc,cxx}]
indent_size = 4

# Java
[*.java]
indent_size = 4

# ===================================
# Web
# ===================================
[*.{html,htm}]
indent_size = 2

[*.{css,scss,sass,less}]
indent_size = 2

[*.{xml,svg}]
indent_size = 2

# ===================================
# Data formats
# ===================================
[*.{csv,tsv}]
trim_trailing_whitespace = false

[*.sql]
indent_size = 2

# ===================================
# Специфичные для workspace файлы
# ===================================
[VERSION]
insert_final_newline = true

[*.env*]
indent_size = 2
