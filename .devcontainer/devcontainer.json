{
  "name": "Polyglot Development Environment",

  // –ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ –≥–æ—Ç–æ–≤–æ–≥–æ –æ–±—Ä–∞–∑–∞ –∏–∑ GitHub Container Registry
  // –ë—ã—Å—Ç—Ä–µ–µ —á–µ–º –ª–æ–∫–∞–ª—å–Ω–∞—è —Å–±–æ—Ä–∫–∞ (1-2 –º–∏–Ω—É—Ç—ã vs 5-10 –º–∏–Ω—É—Ç)
  "image": "ghcr.io/nizovtsevnv/devcontainer-workspace:latest",

  // –ê–ª—å—Ç–µ—Ä–Ω–∞—Ç–∏–≤–∞: –ª–æ–∫–∞–ª—å–Ω–∞—è —Å–±–æ—Ä–∫–∞ (—Ä–∞—Å–∫–æ–º–º–µ–Ω—Ç–∏—Ä—É–π—Ç–µ –µ—Å–ª–∏ –Ω—É–∂–Ω–∞ –∫–∞—Å—Ç–æ–º–∏–∑–∞—Ü–∏—è)
  // "build": {
  //   "dockerfile": "Dockerfile",
  //   "context": ".",
  //   "args": {
  //     "NODE_VERSION": "22",
  //     "PHP_VERSION": "8.3"
  //   }
  // },

  "workspaceFolder": "/workspace",
  "remoteUser": "developer",

  // –í–ê–ñ–ù–û –¥–ª—è Podman: VS Code DevContainers –º–æ–≥—É—Ç –∏–º–µ—Ç—å –ø—Ä–æ–±–ª–µ–º—ã —Å –ø—Ä–∞–≤–∞–º–∏ —Ñ–∞–π–ª–æ–≤
  // –†–µ–∫–æ–º–µ–Ω–¥—É–µ—Ç—Å—è –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å make up/down –≤–º–µ—Å—Ç–æ "Reopen in Container"
  // –°–º. –¥–æ–∫—É–º–µ–Ω—Ç–∞—Ü–∏—é –≤ README.md

  // –ü—Ä–æ–±—Ä–æ—Å Docker socket –¥–ª—è —Ä–∞–±–æ—Ç—ã —Å Docker –Ω–∞ host –º–∞—à–∏–Ω–µ
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  // –ö–æ–º–∞–Ω–¥–∞ –ø–æ—Å–ª–µ —Å–æ–∑–¥–∞–Ω–∏—è –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞
  "postCreateCommand": "echo '‚úÖ Workspace –≥–æ—Ç–æ–≤ –∫ —Ä–∞–±–æ—Ç–µ!' && echo 'üì¶ –£—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–Ω—ã–µ –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç—ã:' && echo 'Node.js:' $(node --version) && echo 'PHP:' $(php --version | head -n1) && echo 'Rust:' $(rustc --version) && echo 'üê≥ Container runtime:' && (docker --version 2>/dev/null || podman --version 2>/dev/null || echo 'Docker socket –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω')",
  // –†–∞—Å—à–∏—Ä–µ–Ω–∏—è –∏ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ VS Code
  "customizations": {
    "vscode": {
      "extensions": [
        // –û–±—â–∏–µ –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç—ã
        "editorconfig.editorconfig",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "streetsidesoftware.code-spell-checker",
        "streetsidesoftware.code-spell-checker-russian",
        // Node.js / TypeScript
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "christian-kohler.npm-intellisense",
        "eg2.vscode-npm-script",
        // PHP
        "bmewburn.vscode-intelephense-client",
        "xdebug.php-debug",
        "mrmlnc.vscode-phpstan",
        // Rust
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb",
        "serayuzgur.crates",
        "tamasfe.even-better-toml"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.eol": "\n",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        // Node.js / TypeScript
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "eslint.validate": [
          "javascript",
          "javascriptreact",
          "typescript",
          "typescriptreact"
        ],
        "typescript.tsdk": "node_modules/typescript/lib",
        // PHP
        "[php]": {
          "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
          "editor.tabSize": 4
        },
        "php.validate.enable": true,
        "php.validate.executablePath": "/usr/bin/php",
        "intelephense.files.maxSize": 5000000,
        // Rust
        "[rust]": {
          "editor.defaultFormatter": "rust-lang.rust-analyzer",
          "editor.tabSize": 4
        },
        "rust-analyzer.checkOnSave.command": "clippy",
        // Makefile
        "[makefile]": {
          "editor.insertSpaces": false
        }
      }
    }
  },
  // –ü–µ—Ä–µ–º–µ–Ω–Ω—ã–µ –æ–∫—Ä—É–∂–µ–Ω–∏—è –¥–ª—è –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞
  "containerEnv": {
    "TZ": "UTC"
  },
  // –ü—Ä–æ–±—Ä–∞—Å—ã–≤–∞–µ–º—ã–µ –ø–æ—Ä—Ç—ã (–º–æ–∂–Ω–æ —Ä–∞—Å—à–∏—Ä–∏—Ç—å –ø—Ä–∏ –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ—Å—Ç–∏)
  "forwardPorts": []
}
